{
  "expo": {
    "name": "FireRescue",
    "slug": "fire-rescue",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "icon": "./src/assets/icon.png",
    "assetBundlePatterns": [
      "**/*",
      "src/assets/**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.firerescue.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to location to find the nearest fire station and provide accurate incident reporting.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to location to find the nearest fire station and provide accurate incident reporting."
      }
    },
    "android": {
      "icon": "./src/assets/icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.firerescue.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "${EXPO_PUBLIC_GOOGLE_MAPS_API_KEY}"
        }
      }
    },
    "web": {
      "favicon": "./src/assets/favicon.png"
    },
    "plugins": [
      "expo-location",
      "expo-image-picker"
    ]
  }
}